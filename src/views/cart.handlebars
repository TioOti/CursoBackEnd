<div class="container">
    <h1 class="d-flex justify-content-center mt-3">Carrito de Compras:</h1>
    <div id="productsContainer" class="d-flex flex-column mt-5">

        {{#if products.length}}
        {{#each products}}
        <div class="card flex-row ms-2 my-2  ">
            <h5 class="card-header fs-5 text-center d-flex justify-content-center align-items-center border-bottom-0">{{product.title}}</h5>
            <table class="table table-primary table-striped table-borderless table-sm table-hover text-center m-0">
                <thead>
                    <tr class="table-secondary border-bottom border-secondary">
                        <th>Descripcion</th>
                        <th>Precio</th>
                        <th>Código</th>
                        <th>Stock</th>
                    </tr> 
                </thead>
                <tbody>
                    <tr>
                        <td>{{product.description}}</td>
                        <td>${{product.price}}</td>
                        <td>{{product.code}}</td>
                        <td>{{product.stock}}</td>
                    </tr>
                </tbody>
            </table>
            <div class="card-footer d-flex flex-column justify-content-center align-items-center border-top-0">
                <p class="fw-bold my-0">Quantity</p>
                <p class="my-0">{{quantity}}</p>
                <button class="btn btn-danger btn-outline-dark" >X</button>
            </div>
            <input type="hidden" value="productId_{{product._id}}" />
        </div>
        {{/each}}
        
        {{else}}
        <h2 class="text-center "> Su carrito está vacio </h2>
        <button class="btn btn-primary btn-outline-dark"> Volver </button>
         {{/if}}
        <input type="hidden" value="cartId_{{_id}}" />
    </div>
</div>
