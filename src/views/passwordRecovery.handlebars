<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid d-flex justify-content-between">
        <a class="navbar-brand" href="/views/login">eCommerce</a>
    </div>
</nav>
<div class="container">
    <div class="d-flex flex-column align-items-center justify-content-center">
        <h1 class="d-flex justify-content-center text-dark text-opacity-75 my-3">Password Recovery</h1>
        <div class="container w-50 mt-4">
            {{#if success}}
            <div class="d-flex justify-content-center">
                <div id="alert_success" class="alert alert-success">
                    <strong>{{success}}</strong>
                </div>
            </div>
            {{/if}}
            {{#if error}}
            <div class="d-flex justify-content-center">
                <div id="alert_error" class="alert alert-danger">
                    <strong>{{error}}</strong>
                </div>
            </div>
            {{/if}}

            {{#if emailSent}}
                <div class="d-flex justify-content-center">
                    <p class="fw-bold fs-3 text-center w-75 text-primary text-opacity-75">An Email has been sent to your inbox with instructions to update your password.</p>
                </div>
            {{else}}
                {{#if fromEmail}}
                    <form onfocusin="hideMessage()" action="/views/updatePassword/{{ user.email }}" method="POST">
                        <div class="d-flex">
                            <label for="newPassword" class="col-auto form-label mx-3 my-1">New Password</label>
                            <input type="password" class="form-control py-0" name="newPassword" id="newPassword" autocomplete="new-password" required="true">
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-sm btn-outline-dark mt-3">Update Password</button>
                        </div>
                    </form>
                {{else}}
                <form onfocusin="hideMessage()" action="/views/passwordRecovery" method="POST">
                    <div class="d-flex">
                        <label for="email" class="col-auto form-label mx-3 my-1">Email</label>
                        <input type="email" class="form-control py-0" name="email" id="email" autocomplete="email" required="true">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-sm btn-outline-dark mt-3">Send Email</button>
                    </div>
                </form>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>
<script>
    function hideMessage(){
        if(document.getElementById("alert_success")) document.getElementById("alert_success").style.display = "none";
        if(document.getElementById("alert_error")) document.getElementById("alert_error").style.display = "none";
    }
</script>
